<%- include ../layouts/header.ejs %>
<aside class="sidebar">
    <table>
        <tr>
            <td class="sideMenuButton" onClick="addUser()">+ Add Case</td>
        </tr>
    </table>    
</aside>
<main class="main">
<div class="page-data">
    <div class="data-table">
        <table>
            <tr>
                <th>Caller Name</th>
                <th>Issue</th>
                <th>Case Added</th>
                <th width="120px">Action</th>
            </tr>

            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr>
                <td><%=data[i].CallerName%></td>
                <td><%=data[i].Issue%></td>
                <td><% var dte=new Date(data[i].CaseAdded) %>
                    <%= dte.toLocaleDateString('en-UK')%></td>
                <td>
                    <a class="a-inside edit" href="../caseReport/edit/<%=data[i].id%>">Edit</a>
                    <a class="a-inside delete" href="../caseReport/delete/<%=data[i].id%>">Delete</a>
                </td>
            </tr>
            <% }
            }else{ %>
            <tr>
                <td colspan="6">No user</td>
            </tr>
            <% } %>
        </table>
    </div>
</div>

<%- include ../layouts/footer.ejs %>
